@model RegisterViewModel
@{
    ViewData["Title"] = "Opprett konto";
}
<div class="container">
    <h1>Registrer deg</h1>
    <p class="signIn flow-text">
        Fyll ut kontaktinformasjon for å bli en del av TrilleLille.
    </p>
    <form asp-controller="Account" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="card-panel teal lighten-5">
            <div class="row">
                <div class="input-field col s12">
                    <input asp-for="Email" type="text" class="validate" id="email">
                    <span asp-validation-for="Email" class="text-danger" />
                    <label class="active" for="email" asp-for="Email"></label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input asp-for="Password" type="password" class="validate" id="password">
                    <span asp-validation-for="Password" class="text-danger" />
                    <label class="active" for="password" asp-for="Password"></label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input asp-for="ConfirmPassword" type="password" class="validate" id="confirm_password">
                    <span asp-validation-for="ConfirmPassword" class="text-danger" />
                    <label class="active" for="confirm_password" asp-for="ConfirmPassword"></label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <button class="btn waves-effect right waves-light" type="submit" name="action">
                        Registrer
                        <i class="material-icons right">send</i>
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
