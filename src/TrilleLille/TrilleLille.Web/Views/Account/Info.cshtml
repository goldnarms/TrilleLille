@model InfoViewModel

<div class="container">
    <h1>Om deg</h1>
    <p class="signIn flow-text">
        Fortell oss litt mer om deg slik at vi kan finne de beste gruppene for deg.
    </p>
    <form asp-controller="Account" asp-action="ExternalLoginConfirmation" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="card-panel teal lighten-5">
            <div class="row">
                <div class="input-field col s12">
                    <input asp-for="BirthDate" type="text" class="validate" id="birthdate">
                    <span asp-validation-for="BirthDate" class="text-danger" />
                    <label class="active" for="birthdate" asp-for="BirthDate"></label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input name="parentGroup" type="radio" id="mom" asp-for="Parent" value="@Model.Parent" />
                    <label for="mom">Mamma</label>
                    <input name="parentGroup" type="radio" id="dad" asp-for="Parent" value="@Model.Parent" />
                    <label for="dad">Pappa</label>
                    <label class="active" for="gender" asp-for="Parent"></label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input asp-for="Name" type="text" class="validate" id="name">
                    <span asp-validation-for="Name" class="text-danger" />
                    <label class="active" for="name" asp-for="Name"></label>
                </div>
            </div>

            <div class="row">
                <div class="input-field col s12">
                    <button class="btn waves-effect right waves-light" type="submit" name="action">
                        Registrer
                        <i class="material-icons right">send</i>
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
